{
  "name": "pavlakis/slim-cli",
  "description": "Making a mock request through the CLI and enabling the same application entry point on CLI scripts.",
  "keywords": [
    "slim", "framework", "cli", "middleware", "psr17"
  ],
  "homepage": "http://github.com/pavlakis/slim-cli",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Antonis Pavlakis",
      "email": "adoni@pavlakis.info",
      "homepage": "https://pavlakis.dev"
    }
  ],
  "autoload": {
    "psr-4": {
      "Pavlakis\\Cli\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Pavlakis\\Cli\\Test\\" : "tests/phpunit"
    }
  },
  "require": {
    "php": "^7.2",
    "slim/http": "^1.0",
    "slim/psr7": "^1.1",
    "ext-json": "*"
  },
  "require-dev": {
    "slim/slim": "^4.0",
    "phpunit/phpunit": "^8.0",
    "phpstan/phpstan": "^0.12.32",
    "friendsofphp/php-cs-fixer": "^2.16"
  },
  "config": {
    "bin-dir": "bin",
    "preferred-install": {
      "*": "dist"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "2.x-dev"
    }
  },
  "scripts": {
    "test": "phpunit -c tests/phpunit/phpunit.xml --colors=always",
    "static-analysis": "phpstan analyse src --level 7",
    "check-styles": "php-cs-fixer fix --dry-run src",
    "fix-styles": "php-cs-fixer fix src"
  }
}
